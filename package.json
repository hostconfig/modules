{
  "name": "@hostconfig/modules",
  "version": "0.0.0-alpha",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "author": "StoneyDSP <nathanjhood@googlemail.com>",
  "readme": "https://github.com/hostconfig/modules#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hostconfig/modules.git"
  },
  "private": false,
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": "~18.18.0"
  },
  "engineStrict" : false,
  "scripts": {
    "install": "cmake-js compile",
    "build": "tsc -p ./tsconfig.json && tsc-alias && ts-add-js-extension --dir=dist",
    "postbuild": "yarn copy:images && yarn copy:javascripts && yarn copy:stylesheets",
    "rebuild": "yarn clean && yarn build",
    "copy:images" : "cp -rv ./src/images ./dist/images",
    "copy:javascripts" : "cp -rv ./src/javascripts ./dist/javascripts",
    "copy:stylesheets" : "cp -rv ./src/stylesheets ./dist/stylesheets",
    "clean": "rm -rvf ./dist",
    "wipe": "yarn clean && rm -rvf ./node_modules"
  },
  "dependencies": {
    "cmake-js": "^7.2.1",
    "rimraf": "^5.0.5",
    "ts-add-js-extension": "^1.6.0",
    "tsc-alias": "^1.8.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3"
  },
  "binary": {
    "napi_versions": [7]
  }
}
